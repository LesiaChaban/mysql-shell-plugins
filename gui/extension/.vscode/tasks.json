{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "tsc: extension",
            "type": "shell",
            "command": "tsc",
            "args": [
                "-w",
                "-p",
                ".",
                "--outDir",
                "output"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": "$tsc-watch"
        }
    ]
}